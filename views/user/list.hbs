<h2><a class="btn btn-secondary" href="/user"><i class="fa fa-plus" aria-hidden="true"></i>Create New</a>User Deatils</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone_Number</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
            <td>
               <a href="/user/{{this._id}}"><i class="fa fa-pencil fa-md" aria-hidden="true"></i></a>
               <a href="/user/delete/{{this._id}}" onclick= "return confirm('Are you sure want to delete this user?');"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>